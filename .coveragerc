[run]
source = .
branch = True
omit = 
    */venv/*
    */virtualenv/*
    */migrations/*
    */tests/*
    manage.py
    */settings/*
    */venv/*
    */__pycache__/*
    */node_modules/*
    .tox/*
    */site-packages/*
    */lib/python*/*
    */conftest.py
    */factories.py

# Regexes for lines to exclude from coverage
exclude_lines =
    pragma: no cover

    def __repr__
    if self\.debug

    raise AssertionError
    raise NotImplementedError

    if 0:
    if __name__ == .__main__.:

    @(abc\.)?abstractmethod

ignore_errors = True
show_missing = True
skip_covered = False

[html]
directory = htmlcov
title = Order System Test Coverage

[xml]
output = coverage.xml